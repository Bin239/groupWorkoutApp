<% include ../partials/header %>


<header>
      <h1>Edit Workout</h1>
      <nav>
        <ul>
          <li>
            <a href="/">Home</a>
          </li>
        </ul>
      </nav>
    </header>
    <main>

    <!-- checkout the route on next line to make sure it is correct -->

    <form action="/workout/<%=workout._id%>?_method=PUT" method="post">
      
     <select name="workoutId">
        <%for (let i = 0; i < users.length; i++) { %>

           <option value="<%=workout[i]._id%>"><%=users[i].name%></option>

        <% } %> 

      </select><br/>
      Workout Type:<input type="text" name="workout" /><br/>
      Variation: <input type="text" name="variation" /><br/>
      Reps: <input type="text" name="reps" /><br/>
      Weight: <input type="text" name="weight" /><br/>
      <button type="submit">Edit Workout</button>
    </form>
    </main>

